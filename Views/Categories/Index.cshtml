@model List<Category>

@section Title {
    <h3>Categories</h3>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td> @*This asp things in the below line is the tag helpers that do the same work as the href *@
                    <td><a class="btn btn-link" asp-controller="categories" asp-action="edit" asp-route-id="@category.Id">Edit</a></td>
                    <td>
                        <a class="btn btn-link"
                           asp-controller="categories"
                           asp-action="delete"
                           asp-route-id="@category.Id"
                           onclick="return ConfirmDelete()">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br>    
    <a class="btn btn-primary" asp-controller="categories" asp-action="add">Add</a>    
}

@section Scripts{
    <script>
        function ConfirmDelete(){
            return confirm("Are you sure you want to delete this category?");
        }
    </script>
}
